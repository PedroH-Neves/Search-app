  <h1 class="center-container">My Search Page</h1>

  <%= form_tag searches_path, method: "POST", class: "center-container"  do %>
    <%= label_tag(:search, "What do you want to search") %>
    <%= text_field_tag :search, params[:search] %>
    <%= submit_tag "Search" %>
  <% end %>

  <h1 class="center-container">Your Searchs</h1>

  <ul class="list-unstyled">
    <% @searchs.each do |search| %>
      <li>
        <%= search.query %> => How hyped is: <%= search.search_count %>
      </li>
    <% end %>
  </ul>

